<Grid
    x:Class="AnalyseAudio_PInfo.Views.Keyboard.KeyboardElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
    
    <ComboBox Grid.Row="0" ItemsSource="{x:Bind Path=WavesType}" SelectedItem="{x:Bind Path=WaveType, Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10" />

    <StackPanel x:Name="Whites" Grid.Row="1" Orientation="Horizontal" />
    <StackPanel x:Name="Blacks" Grid.Row="1" Orientation="Horizontal" Margin="0" />

</Grid>
